---
import background from "../assets/background1.svg";
import cartoon from "../assets/cartoon.png";
import gitIcon from "../assets/gitIcon.svg";
import inIcon from "../assets/inIcon.svg";
import mailIcon from "../assets/mailIcon.svg";
import cvIcon from "../assets/cvIcon.svg";
---


<div class="container flex justify-center items-center h-[100vh]">
    <!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
    <div class="flex justify-around items-center w-[100vw]">
        <div class="flex flex-col">
            <h2
                class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#37527B] to-[#8CB7F9]"
            >
                Juan S. Ladino
            </h2>
            <h1 class="text-3xl font-semibold">Software developer</h1>
            <div class="flex gap-x-3 mt-3">
                <a
                    href="#"
                    class="flex items-center space-x-2 hover:drop-shadow-[0_4px_6px_rgba(140,183,249,0.6)]"
                >
                    <img src={gitIcon.src} class="size-7" alt="GitHub Logo" />
                </a>
                <a
                    href="#"
                    class="flex items-center space-x-2 hover:drop-shadow-[0_4px_6px_rgba(140,183,249,0.6)]"
                >
                    <img src={inIcon.src} class="size-7" alt="GitHub Logo" />
                </a>
                <a
                    href="#"
                    class="flex items-center space-x-2 hover:drop-shadow-[0_4px_6px_rgba(140,183,249,0.6)]"
                >
                    <img src={mailIcon.src} class="size-7" alt="GitHub Logo" />
                </a>
            </div>
            <a
                href="#"
                class="flex justify-around items-center bg-transparent border-1 rounded-3xl text-center tracking-wide font-semibold mt-5 py-2 px-2 float-right max-w-[170px]"
            >
                <img
                    src={cvIcon.src}
                    alt=""
                />
                Curriculum
            </a>
        </div>
        <!-- <span class="relative inline-block before:absolute before:-inset-1 before:block before:bg-pink-500 before:blur-3xl before:h-96 before:w-100 before:rounded-full "> -->
        <span class="relative inline-block before:absolute before:-inset-1 before:block before:bg-[#37527B]/50 before:blur-2xl before:h-96 before:w-100 before:rounded-full ">
            <span class="relative text-white dark:text-gray-950"></span>
            <img
            src={cartoon.src}
            alt="logo_cartoon"
            class="relative h-80 rounded-full drop-shadow-[0_4px_6px_rgba(140,183,249,0.6)]"
            />
        </span>
    </div>
</div>
